<% if current_user %>
  <% if @error %>
    <%= @error %>
  <% end %>

  <form method="post" action="/answers">
    <input type="hidden" name="question_id" value="<%= @question.id %>">
    <input type="text" name="answer" placeholder="answer text here">
    <input type="submit" value="submit new answer">
  </form>
<% else %>
  <br>
  <h1>You must be logged in to answer a question.</h1>
<% end %>
